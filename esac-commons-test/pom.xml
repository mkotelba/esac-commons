            <artifactId>testng</artifactId>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-compile</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>default-testCompile</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-test-sources</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>esac-commons-core</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>test-sources</classifier>
                                    <excludes>${project.java.package.path}/**/*EsacCommons*.java</excludes>
                                    <includes>${project.java.package.path}/**/*.java</includes>
                                    <outputDirectory>${project.build.dependencySourcesDirectory}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>esac-commons-crypto</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>test-sources</classifier>
                                    <excludes>${project.java.package.path}/crypto/**/*EsacCommons*.java</excludes>
                                    <includes>${project.java.package.path}/crypto/**/*.java</includes>
                                    <outputDirectory>${project.build.dependencySourcesDirectory}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>esac-commons-data</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>test-sources</classifier>
                                    <excludes>${project.java.package.path}/data/**/*EsacCommons*.java</excludes>
                                    <includes>${project.java.package.path}/data/**/*.java</includes>
                                    <outputDirectory>${project.build.dependencySourcesDirectory}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>esac-commons-web</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>test-sources</classifier>
                                    <excludes>${project.java.package.path}/web/**/*EsacCommons*.java</excludes>
                                    <includes>${project.java.package.path}/web/**/*.java</includes>
                                    <outputDirectory>${project.build.dependencySourcesDirectory}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>esac-commons-ws</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>test-sources</classifier>
                                    <excludes>${project.java.package.path}/ws/**/*EsacCommons*.java</excludes>
                                    <includes>${project.java.package.path}/ws/**/*.java</includes>
                                    <outputDirectory>${project.build.dependencySourcesDirectory}</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack-test-classes</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <excludes>${project.java.package.path}/**/*EsacCommons*.class</excludes>
                            <includes>${project.java.package.path}/**/*.class</includes>
                            <includesArtifactIds>esac-commons-core,esac-commons-crypto,esac-commons-data,esac-commons-web,esac-commons-ws</includesArtifactIds>
                            <includesGroupIds>${project.groupId}</includesGroupIds>
                            <includesScopes>test</includesScopes>
                            <includesTypes>test-jar</includesTypes>
                            <outputDirectory>${project.build.dependencyClassesDirectory}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <executions>
                    <execution>
                        <id>test-it</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-jar</id>
                        <configuration>
                            <classesDirectory>${project.build.dependencyClassesDirectory}</classesDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>test-jar</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-resources</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>default-testResources</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>jar-sources</id>
                    </execution>
                    <execution>
                        <id>test-jar-sources</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-test</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.gmavenplus</groupId>
                <artifactId>gmavenplus-plugin</artifactId>
                <executions>
                    <execution>
                        <id>process-test-resources</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-test-dependency-sources</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${project.build.dependencySourcesDirectory}</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.kuali.maven.plugins</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>translate-properties</id>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>