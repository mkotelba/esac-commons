        <artifactId>esac-commons-parent</artifactId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../esac-commons-parent</relativePath>
    </parent>
    
    <artifactId>esac-commons-test</artifactId>
    
    <description>ESAC Commons test components Maven project.</description>
    
    <properties>
        <!--====================================================================================================
        = PROJECT BUILD DEPENDENCY PROPERTIES
        =====================================================================================================-->
        <project.build.dependencyClassesDirectory>${project.build.directory}/deps/classes</project.build.dependencyClassesDirectory>
        <project.build.dependencySourcesDirectory>${project.build.directory}/deps/sources</project.build.dependencySourcesDirectory>
        
        <!--====================================================================================================
        = PROJECT JAVA PROPERTIES
        =====================================================================================================-->
        <project.java.package>${project.groupId}.test</project.java.package>
    </properties>
    
    <dependencies>
        <!--====================================================================================================
        = PROJECT COMPILE DEPENDENCIES
        =====================================================================================================-->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>esac-commons-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>esac-commons-core</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>esac-commons-crypto</artifactId>
            <version>${project.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>esac-commons-crypto</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>esac-commons-data</artifactId>
            <version>${project.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>esac-commons-data</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>esac-commons-web</artifactId>
            <version>${project.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>esac-commons-web</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>esac-commons-ws</artifactId>
            <version>${project.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>esac-commons-ws</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <optional>true</optional>
        </dependency>
        
        <!--====================================================================================================
        = COMPILE DEPENDENCIES
        =====================================================================================================-->
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml</groupId>
            <artifactId>classmate</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.dataformat</groupId>
            <artifactId>jackson-dataformat-xml</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.datatype</groupId>
            <artifactId>jackson-datatype-guava</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.datatype</groupId>
            <artifactId>jackson-datatype-jdk8</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.module</groupId>
            <artifactId>jackson-module-jaxb-annotations</artifactId>
        </dependency>
        <dependency>
            <groupId>com.github.sebhoss</groupId>
            <artifactId>suppress-warnings</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.code.findbugs</groupId>
