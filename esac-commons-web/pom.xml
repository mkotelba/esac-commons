    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <configuration>
                    <systemPropertyVariables>
                        <esac-commons.app.webapp.dir>${project.build.testAppWebappDirectory}</esac-commons.app.webapp.dir>
                    </systemPropertyVariables>
                </configuration>
                <executions>
                    <execution>
                        <id>test-it</id>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>jar-sources</id>
                    </execution>
                    <execution>
                        <id>test-jar-sources</id>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <systemPropertyVariables>
                        <esac-commons.app.webapp.dir>${project.build.testAppWebappDirectory}</esac-commons.app.webapp.dir>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.gmavenplus</groupId>
                <artifactId>gmavenplus-plugin</artifactId>
                <executions>
                    <execution>
                        <id>process-test-resources</id>
                        <configuration>
                            <properties>
                                <property>
                                    <name>dirs</name>
                                    <value>
                                        ${project.build.testAppDirectory}
                                        ${project.build.testAppBinDirectory}
                                        ${project.build.testAppConfDirectory}
                                        ${project.build.testAppConfSslDirectory}
                                        ${project.build.testAppDataDirectory}
                                        ${project.build.testAppLibDirectory}
                                        ${project.build.testAppLogDirectory}
                                        ${project.build.testAppRunDirectory}
                                        ${project.build.testAppWebappDirectory}
                                        ${project.build.testAppWorkDirectory}
                                    </value>
                                </property>
                            </properties>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.kuali.maven.plugins</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>translate-properties</id>
                    </execution>
                </executions>
            </plugin>
        </plugins>
